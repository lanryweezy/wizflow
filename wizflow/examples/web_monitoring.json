{
  "name": "Website Change Monitor",
  "description": "Monitor website for changes and send notifications",
  "trigger": {
    "type": "schedule",
    "schedule": "0 */2 * * *"
  },
  "actions": [
    {
      "type": "web_scrape",
      "tool": "requests",
      "config": {
        "url": "https://example.com/news",
        "selector": ".news-headline"
      }
    },
    {
      "type": "file_process",
      "tool": "python",
      "config": {
        "filepath": "last_headlines.txt",
        "operation": "read"
      }
    },
    {
      "type": "send_email",
      "tool": "smtp",
      "config": {
        "to": "monitor@email.com",
        "subject": "Website Change Detected",
        "message": "New content detected: {{scraped_content}}"
      }
    }
  ],
  "variables": {
    "scraped_content": "Latest website content",
    "file_content": "Previously saved content"
  },
  "metadata": {
    "generated_from": "Monitor example.com for new articles and email me when there are changes",
    "version": "1.0",
    "created_by": "WizFlow CLI"
  }
}
