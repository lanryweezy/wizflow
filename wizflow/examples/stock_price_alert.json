{
  "name": "Stock Price Alert",
  "description": "Monitor stock prices and send alerts when thresholds are met",
  "trigger": {
    "type": "schedule",
    "schedule": "0 9 * * 1-5"
  },
  "actions": [
    {
      "type": "api_call",
      "tool": "requests",
      "config": {
        "url": "https://api.alphavantage.co/query?function=GLOBAL_QUOTE&symbol=AAPL&apikey=demo",
