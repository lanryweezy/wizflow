      "type": "send_email",
      "tool": "smtp",
      "config": {
        "to": "investor@email.com",
        "subject": "Daily Stock Price Alert",
        "message": "AAPL current price: {{api_result.price}}"
      }
    }
  ],
  "variables": {
    "api_result": "Stock price data from API"
  },
  "metadata": {
    "generated_from": "Check Apple stock price every morning and email me the results",
