{
  "name": "Email to WhatsApp Alert",
  "description": "Forward email summaries to WhatsApp",
  "requirements": [
    "twilio",
    "openai"
  ],
  "trigger": {
    "type": "email",
    "filter": "from:boss@example.com"
  },
  "actions": [
    {
      "type": "summarize",
      "tool": "gpt",
      "config": {
        "max_length": 100
      }
    },
    {
      "type": "send_whatsapp",
      "config": {
        "to": "+1234567890",
        "message": "Email Summary: {{summary}}"
      },
      "tool": "twilio"
    }
  ],
  "metadata": {
    "generated_from": "Send me a weather forecast every Friday at 5 PM",
    "version": "1.0",
    "created_by": "WizFlow CLI"
  },
  "variables": {
    "summary": "Value for summary"
  }
}